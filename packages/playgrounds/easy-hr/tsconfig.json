{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "types": ["jest", "node"],
    "plugins": [{ "name": "next" }],
    "paths": {
      "@ninetailed/experience.js": ["../../sdks/javascript/src/index.ts"],
      "@ninetailed/experience.js-next": ["../../sdks/nextjs/src/index.ts"],
      "@ninetailed/experience.js-node": ["../../sdks/nodejs/src/index.ts"],
      "@ninetailed/experience.js-react": ["../../sdks/react/src/index.ts"],
      "@ninetailed/experience.js-shared": ["../../sdks/shared/src/index.ts"],
      "@ninetailed/experience.js-plugin-*": ["../../plugins/*/src/index.ts"],
      "@ninetailed/experience.js-plugin-insights": [
        "../../plugins/insights/src/index.ts"
      ],
      "@ninetailed/experience.js-plugin-preview": [
        "../../plugins/preview/src/index.ts"
      ],
      "@ninetailed/experience.js-preview-bridge": [
        "../../plugins/preview-bridge/src/index.ts"
      ],
      "@ninetailed/experience.js-utils": [
        "../../utils/javascript/src/index.ts"
      ],
      "@ninetailed/experience.js-utils-*": ["../../utils/*/src/index.ts"],
      "@ninetailed/experience.js-utils-contentful": [
        "../../utils/contentful/src/index.ts"
      ],
      "@/components/*": ["./components/*"],
      "@/lib/*": ["./lib/*"],
      "@/styles/*": ["./styles/*"],
      "@/types/*": ["./types/*"],
      "@/public/*": ["./public/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "next-env.d.ts"],
  "exclude": ["node_modules", "jest.config.ts"]
}
