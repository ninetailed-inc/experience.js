{
  "extends": ["plugin:@nx/react-typescript", "../../../.eslintrc.json"],
  "ignorePatterns": ["!**/*", ".next", "next-env.d.ts"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": [
        "**/__tests__/**/*.[jt]s?(x)",
        "**/?(*.)+(spec|test).[jt]s?(x)"
      ],
      "plugins": ["jest"],
      "extends": [
        "plugin:testing-library/react",
        "plugin:jest-dom/recommended",
        "plugin:jest/recommended"
      ],
      "settings": {
        "jest": {
          "version": 27
        }
      }
    }
  ],
  "env": {
    "jest": true
  }
}
