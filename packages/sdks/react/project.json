{
  "name": "sdks-react",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/sdks/react/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/packages/sdks/react",
        "tsConfig": "packages/sdks/react/tsconfig.lib.json",
        "project": "packages/sdks/react/package.json",
        "entryFile": "packages/sdks/react/src/index.ts",
        "external": [
          "react/jsx-runtime",
          "@ninetailed/experience-api-types"
        ],
        "rollupConfig": "@nx/react/plugins/bundle-rollup",
        "compiler": "babel",
        "format": [
          "cjs",
          "esm"
        ],
        "assets": [
          {
            "glob": "packages/sdks/react/README.md",
            "input": ".",
            "output": "."
          }
        ]
      },
      "dependsOn": [
        {
          "target": "build",
          "dependencies": true
        }
      ]
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/packages/sdks/react"
      ],
      "options": {
        "jestConfig": "packages/sdks/react/jest.config.cjs"
      }
    }
  }
}
