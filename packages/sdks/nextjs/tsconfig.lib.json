{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "../../../",
    "outDir": "../../../dist/out-tsc",
    "types": ["node"],
    "paths": {
      "@ninetailed/experience.js": ["dist/packages/sdks/javascript/index.d.ts"],
      "@ninetailed/experience.js-react": [
        "dist/packages/sdks/react/index.d.ts"
      ],
      "@ninetailed/experience.js-plugin-ssr": [
        "dist/packages/plugins/ssr/index.d.ts"
      ]
    }
  },
  "files": [
    "../../../node_modules/@nx/react/typings/cssmodule.d.ts",
    "../../../node_modules/@nx/react/typings/image.d.ts"
  ],
  "exclude": [
    "jest.config.ts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx",
    "**/*.spec.js",
    "**/*.test.js",
    "**/*.spec.jsx",
    "**/*.test.jsx"
  ],
  "include": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx", "jest.config.cjs"]
}
