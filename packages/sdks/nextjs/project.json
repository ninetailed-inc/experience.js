{
  "name": "sdks-nextjs",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/sdks/nextjs/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/sdks/nextjs",
        "tsConfig": "packages/sdks/nextjs/tsconfig.lib.json",
        "project": "packages/sdks/nextjs/package.json",
        "entryFile": "packages/sdks/nextjs/src/index.ts",
        "external": ["react/jsx-runtime"],
        "rollupConfig": "@nx/react/plugins/bundle-rollup",
        "buildableProjectDepsInPackageJsonType": "dependencies",
        "compiler": "babel",
        "format": ["cjs", "esm"],
        "assets": [
          {
            "glob": "packages/sdks/nextjs/README.md",
            "input": ".",
            "output": "."
          }
        ]
      },
      "dependsOn": [
        {
          "target": "build",
          "dependencies": true
        }
      ]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "lintFilePatterns": ["packages/sdks/nextjs/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["coverage/packages/sdks/nextjs"],
      "options": {
        "jestConfig": "packages/sdks/nextjs/jest.config.js",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
